@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="logo">
    <img src="~/images/birzabreathandperformance.png" width="250" height="100" />
</div>
<div class="row">
    <div class="col-md-8">
        <form method="post" id="forgotForm">
            <h4 id="forgotText">Forgot Password?</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <div class="col-md-10">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button id="forgotBtn" type="submit" class="btn btn-default">Email Link</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
